--// Leo Hub V1
if game:GetService("CoreGui"):FindFirstChild("LeoHub") then
    game:GetService("CoreGui").LeoHub:Destroy()
end

-- Services
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- GUI Principal
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LeoHub"
ScreenGui.Parent = game:GetService("CoreGui")

-- Janela Principal
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Visible = true
MainFrame.Parent = ScreenGui

-- Título
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -40, 0, 40)
Title.Position = UDim2.new(0, 10, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "Leo Hub V1"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Parent = MainFrame

-- Botão Fechar (X)
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
CloseButton.Text = "X"
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 16
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Parent = MainFrame

-- Botão Reabrir (bolinha)
local ReopenButton = Instance.new("TextButton")
ReopenButton.Size = UDim2.new(0, 40, 0, 40)
ReopenButton.Position = UDim2.new(0, 20, 1, -60)
ReopenButton.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
ReopenButton.Text = "◉"
ReopenButton.Font = Enum.Font.GothamBold
ReopenButton.TextSize = 18
ReopenButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ReopenButton.Visible = false
ReopenButton.Parent = ScreenGui

-- Funções de abrir/fechar
CloseButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    ReopenButton.Visible = true
end)

ReopenButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    ReopenButton.Visible = false
end)

-- Scroll para os botões
local ButtonFrame = Instance.new("ScrollingFrame")
ButtonFrame.Size = UDim2.new(1, -20, 1, -60)
ButtonFrame.Position = UDim2.new(0, 10, 0, 50)
ButtonFrame.BackgroundTransparency = 1
ButtonFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
ButtonFrame.ScrollBarThickness = 4
ButtonFrame.Parent = MainFrame

-- Layout para organizar os botões
local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 8)
UIListLayout.FillDirection = Enum.FillDirection.Vertical
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = ButtonFrame

-- Função para criar botões no menu
local function createButton(name, callback)
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(0.9, 0, 0, 40)
    Btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Btn.Text = name
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 16
    Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Btn.Parent = ButtonFrame

    Btn.MouseButton1Click:Connect(callback)

    -- Animação hover
    Btn.MouseEnter:Connect(function()
        TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(70, 70, 70)}):Play()
    end)
    Btn.MouseLeave:Connect(function()
        TweenService:Create(Btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 40)}):Play()
    end)
end

-- ===========================
-- Função: puxar inimigos
-- ===========================
local function puxarInimigos()
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    -- Tente mudar esse nome de pasta dependendo do jogo
    local pastaInimigos = workspace:FindFirstChild("Enemies") or workspace:FindFirstChild("Mobs") or workspace:FindFirstChild("NPCs")

    if pastaInimigos then
        for _, inimigo in pairs(pastaInimigos:GetChildren()) do
            local hrpInimigo = inimigo:FindFirstChild("HumanoidRootPart")
            if hrpInimigo then
                hrpInimigo.CFrame = hrp.CFrame + Vector3.new(math.random(-5,5), 0, math.random(-5,5))
            end
        end
        print("✅ Inimigos puxados com sucesso!")
    else
        warn("⚠️ Não achei a pasta de inimigos (troque 'Enemies/Mobs/NPCs' pelo nome certo do jogo).")
    end
end

-- Criar botão no menu
createButton("Puxar Inimigos", puxarInimigos)
