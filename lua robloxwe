-- Leo V1 Hub - Profissional com Puxar Inimigos, Imortalidade e Excluir Menu
-- COLOQUE EM UM LOCALSCRIPT DENTRO DE StarterPlayerScripts OU GUI

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remove duplicados
if playerGui:FindFirstChild("LeoV1HubGui") then
    playerGui.LeoV1HubGui:Destroy()
end

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LeoV1HubGui"
screenGui.Parent = playerGui

-- MAIN FRAME
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0,12)

-- HEADER
local header = Instance.new("Frame")
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
header.Parent = mainFrame
Instance.new("UICorner", header).CornerRadius = UDim.new(0,12)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -40, 1, 0)
title.Position = UDim2.new(0, 12, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Leo V1 Hub"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = header

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 28, 0, 28)
closeBtn.Position = UDim2.new(1, -34, 0.5, -14)
closeBtn.BackgroundColor3 = Color3.fromRGB(200,50,50)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 16
closeBtn.TextColor3 = Color3.fromRGB(255,255,255)
closeBtn.Parent = header
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(1,0)

-- REOPEN BUTTON
local reopenBtn = Instance.new("TextButton")
reopenBtn.Size = UDim2.new(0,48,0,48)
reopenBtn.Position = UDim2.new(0,12,1,-60)
reopenBtn.BackgroundColor3 = Color3.fromRGB(80,80,180)
reopenBtn.Text = "L"
reopenBtn.Font = Enum.Font.GothamBold
reopenBtn.TextSize = 20
reopenBtn.TextColor3 = Color3.fromRGB(255,255,255)
reopenBtn.Parent = screenGui
Instance.new("UICorner", reopenBtn).CornerRadius = UDim.new(1,0)
reopenBtn.Visible = false

closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    reopenBtn.Visible = true
end)

reopenBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    reopenBtn.Visible = false
end)

-- BUTTON FRAME
local buttonFrame = Instance.new("Frame")
buttonFrame.Size = UDim2.new(1,0,1,-40)
buttonFrame.Position = UDim2.new(0,0,0,40)
buttonFrame.BackgroundTransparency = 1
buttonFrame.Parent = mainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0,8)
UIListLayout.FillDirection = Enum.FillDirection.Vertical
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = buttonFrame

-- FUN√á√ÉO PARA CRIAR BOT√ïES
local function createButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9,0,0,36)
    btn.BackgroundColor3 = Color3.fromRGB(60,60,70)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Parent = buttonFrame

    btn.MouseButton1Click:Connect(callback)

    -- Hover
    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(90,90,100)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(60,60,70)
    end)
end

-- FUN√á√ÉO: PUXAR INIMIGOS
local function puxarInimigos()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local pastaInimigos = workspace:FindFirstChild("Enemies") or workspace:FindFirstChild("Mobs") or workspace:FindFirstChild("NPCs")
    if pastaInimigos then
        for _, inimigo in pairs(pastaInimigos:GetChildren()) do
            local hrpInimigo = inimigo:FindFirstChild("HumanoidRootPart")
            if hrpInimigo then
                hrpInimigo.CFrame = hrp.CFrame + Vector3.new(math.random(-5,5),0,math.random(-5,5))
            end
        end
        print("‚úÖ Inimigos puxados com sucesso!")
    else
        warn("‚ö†Ô∏è N√£o achei a pasta de inimigos. Troque 'Enemies/Mobs/NPCs' no script se necess√°rio.")
    end
end

-- FUN√á√ÉO: IMORTALIDADE
local imortal = false
local function toggleImortalidade()
    imortal = not imortal
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        if imortal then
            humanoid.MaxHealth = math.huge
            humanoid.Health = math.huge
            print("üíÄ Imortalidade ATIVADA!")
        else
            humanoid.MaxHealth = 100
            humanoid.Health = 100
            print("üíÄ Imortalidade DESATIVADA!")
        end
    end
end

-- FUN√á√ÉO: EXCLUIR MENU
local function excluirMenu()
    screenGui:Destroy()
    print("‚ùå Menu exclu√≠do com sucesso!")
end

-- BOT√ïES
createButton("Puxar Inimigos", puxarInimigos)
createButton("Imortalidade", toggleImortalidade)
createButton("Load Script", function()
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/bobmodsff/BOBMODSFF/refs/heads/main/lua%20robloxwe"))()
    end)
    if success then
        print("‚úÖ Script carregado com sucesso!")
    else
        warn("‚ùå Erro ao carregar o script: "..tostring(err))
    end
end)
createButton("Excluir Menu", excluirMenu)
