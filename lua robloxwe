-- Leo V2 Hub - Mod Menu Profissional FPS
-- COLOQUE EM UM LOCALSCRIPT DENTRO DE StarterPlayerScripts OU GUI

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remove duplicados
if playerGui:FindFirstChild("LeoV2HubGui") then
    playerGui.LeoV2HubGui:Destroy()
end

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "LeoV2HubGui"
screenGui.Parent = playerGui

-- MAIN FRAME
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 450, 0, 400)
mainFrame.Position = UDim2.new(0.5, -225, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0,14)

-- HEADER
local header = Instance.new("Frame")
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
header.Parent = mainFrame
Instance.new("UICorner", header).CornerRadius = UDim.new(0,14)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -50, 1, 0)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Leo V2 Hub FPS"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = header

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -40, 0.5, -15)
closeBtn.BackgroundColor3 = Color3.fromRGB(200,50,50)
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255,255,255)
closeBtn.Parent = header
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(1,0)

-- REOPEN BUTTON
local reopenBtn = Instance.new("TextButton")
reopenBtn.Size = UDim2.new(0,50,0,50)
reopenBtn.Position = UDim2.new(0,15,1,-70)
reopenBtn.BackgroundColor3 = Color3.fromRGB(70,70,180)
reopenBtn.Text = "L"
reopenBtn.Font = Enum.Font.GothamBold
reopenBtn.TextSize = 22
reopenBtn.TextColor3 = Color3.fromRGB(255,255,255)
reopenBtn.Parent = screenGui
Instance.new("UICorner", reopenBtn).CornerRadius = UDim.new(1,0)
reopenBtn.Visible = false

closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    reopenBtn.Visible = true
end)

reopenBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    reopenBtn.Visible = false
end)

-- BUTTON FRAME
local buttonFrame = Instance.new("Frame")
buttonFrame.Size = UDim2.new(1,0,1,-40)
buttonFrame.Position = UDim2.new(0,0,0,40)
buttonFrame.BackgroundTransparency = 1
buttonFrame.Parent = mainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0,8)
UIListLayout.FillDirection = Enum.FillDirection.Vertical
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = buttonFrame

-- FUN√á√ÉO PARA CRIAR BOT√ïES
local function createButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9,0,0,38)
    btn.BackgroundColor3 = Color3.fromRGB(60,60,70)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Parent = buttonFrame

    btn.MouseButton1Click:Connect(callback)

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(90,90,100)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(60,60,70)
    end)
end

-- ===================== FUN√á√ïES =====================

-- 1. PUXAR TODOS OS INIMIGOS PARA VOC√ä
local function puxarInimigos()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local pastaInimigos = workspace:FindFirstChild("Enemies") or workspace:FindFirstChild("Mobs") or workspace:FindFirstChild("NPCs")
    if pastaInimigos then
        for _, inimigo in pairs(pastaInimigos:GetChildren()) do
            local inimigoHRP = inimigo:FindFirstChild("HumanoidRootPart")
            if inimigoHRP then
                inimigoHRP.CFrame = hrp.CFrame + Vector3.new(math.random(-5,5),0,math.random(-5,5))
            end
        end
        print("‚úÖ Todos os inimigos puxados!")
    else
        warn("‚ö†Ô∏è Pasta de inimigos n√£o encontrada")
    end
end

-- 2. IMORTALIDADE TOGGLE
local imortal = false
local function toggleImortalidade()
    imortal = not imortal
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        if imortal then
            humanoid.MaxHealth = math.huge
            humanoid.Health = math.huge
            print("üíÄ Imortalidade ATIVADA!")
        else
            humanoid.MaxHealth = 100
            humanoid.Health = 100
            print("üíÄ Imortalidade DESATIVADA!")
        end
    end
end

-- 3. VELOCIDADE EXTRA
local speedEnabled = false
local function toggleSpeed()
    speedEnabled = not speedEnabled
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        if speedEnabled then
            humanoid.WalkSpeed = 100
            print("‚ö° Velocidade ATIVADA!")
        else
            humanoid.WalkSpeed = 16
            print("‚ö° Velocidade DESATIVADA!")
        end
    end
end

-- 4. PULO EXTRA
local jumpEnabled = false
local function toggleJump()
    jumpEnabled = not jumpEnabled
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        if jumpEnabled then
            humanoid.JumpPower = 150
            print("‚¨ÜÔ∏è Pulo alto ATIVADO!")
        else
            humanoid.JumpPower = 50
            print("‚¨ÜÔ∏è Pulo alto DESATIVADO!")
        end
    end
end

-- 5. MUNI√á√ÉO INFINITA (exemplo gen√©rico)
local function infiniteAmmo()
    print("üî´ Muni√ß√£o infinita ativada! (depende do script do jogo)")
    -- Aqui voc√™ ajusta para o jogo FPS espec√≠fico
end

-- 6. AURA DE DANO / PUXAR TODOS INIMIGOS (exemplo apelativo)
local function damageAura()
    print("üî• Aura de dano ativada! (dependente do jogo)")
end

-- 7. TELEPORTE PARA INIMIGO MAIS PR√ìXIMO
local function teleportNearest()
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local pastaInimigos = workspace:FindFirstChild("Enemies") or workspace:FindFirstChild("Mobs") or workspace:FindFirstChild("NPCs")
    if pastaInimigos then
        local nearest
        local dist = math.huge
        for _, inimigo in pairs(pastaInimigos:GetChildren()) do
            local inimigoHRP = inimigo:FindFirstChild("HumanoidRootPart")
            if inimigoHRP then
                local d = (hrp.Position - inimigoHRP.Position).Magnitude
                if d < dist then
                    nearest = inimigoHRP
                    dist = d
                end
            end
        end
        if nearest then
            hrp.CFrame = nearest.CFrame + Vector3.new(0,0,2)
            print("üìå Teleportado para o inimigo mais pr√≥ximo!")
        end
    end
end

-- 8. ESP INIMIGOS (visual b√°sico)
local espEnabled = false
local espParts = {}
local function toggleESP()
    espEnabled = not espEnabled
    if espEnabled then
        local pastaInimigos = workspace:FindFirstChild("Enemies") or workspace:FindFirstChild("Mobs") or workspace:FindFirstChild("NPCs")
        if pastaInimigos then
            for _, inimigo in pairs(pastaInimigos:GetChildren()) do
                if not inimigo:FindFirstChild("ESP") then
                    local part = Instance.new("BoxHandleAdornment")
                    part.Name = "ESP"
                    part.Adornee = inimigo:FindFirstChild("HumanoidRootPart")
                    part.Size = Vector3.new(2,4,1)
                    part.Color3 = Color3.fromRGB(255,0,0)
                    part.Transparency = 0.5
                    part.AlwaysOnTop = true
                    part.Parent = inimigo
                    table.insert(espParts, part)
                end
            end
        end
        print("üëÅÔ∏è ESP ativado!")
    else
        for _, part in pairs(espParts) do
            part:Destroy()
        end
        espParts = {}
        print("üëÅÔ∏è ESP desativado!")
    end
end

-- 9. LOAD SCRIPT EXTERNO
local function loadExternal()
    local success, err = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/bobmodsff/BOBMODSFF/refs/heads/main/lua%20robloxwe"))()
    end)
    if success then
        print("‚úÖ Script externo carregado!")
    else
        warn("‚ùå Erro: "..tostring(err))
    end
end

-- 10. EXCLUIR MENU
local function excluirMenu()
    screenGui:Destroy()
    print("‚ùå Menu exclu√≠do!")
end

-- 11. MIRA AUTOM√ÅTICA (placeholder)
local aimEnabled = false
local function toggleAimbot()
    aimEnabled = not aimEnabled
    print("üéØ Aimbot "..(aimEnabled and "ATIVADO!" or "DESATIVADO!"))
end

-- ===================== BOT√ïES =====================
createButton("Puxar Inimigos", puxarInimigos)
createButton("Imortalidade", toggleImortalidade)
createButton("Velocidade Extra", toggleSpeed)
createButton("Pulo Alto", toggleJump)
createButton("Muni√ß√£o Infinita", infiniteAmmo)
createButton("Aura de Dano", damageAura)
createButton("Teleportar Inimigo", teleportNearest)
createButton("ESP Inimigos", toggleESP)
createButton("Load Script", loadExternal)
createButton("Excluir Menu", excluirMenu)
createButton("Mira Autom√°tica", toggleAimbot)

print("‚úÖ Leo V2 Hub carregado com sucesso!")
